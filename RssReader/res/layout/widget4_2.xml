<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:gravity="center"
    android:id="@+id/mediumlayout"
    android:background="@color/widgetcolor"
    android:orientation="vertical" >
	
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"        	
    	android:orientation="horizontal" >
    	
	    <TextView
	        android:id="@+id/widget_blog_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="cnbeta"
	        android:textSize="22sp" />
	    
		<ImageButton
		    android:layout_gravity="right"
	        android:id="@+id/widget_refresh"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/refresh"/>
	</LinearLayout>
	
    <TextView
        android:id="@+id/widget_blog_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"        
        android:layout_weight="1" >

    </TextView>
    
    <LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"        	
    	android:orientation="horizontal" >
    	
        <ImageButton
		    android:layout_gravity="left"
	        android:id="@+id/widget_left"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/left"/>
        
	    <TextView
	        android:id="@+id/widget_blog_pagenation"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="1/5"/>
	    
		<ImageButton
		    android:layout_gravity="right"
	        android:id="@+id/widget_right"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/right"/>
	</LinearLayout>
	    
</LinearLayout>