<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             style="@style/ListFrontContent"
             android:id="@+id/widget_blog_list_item"
             android:layout_height="fill_parent">     
	
	<ImageView 
	    android:id="@+id/list_image_arrow" 
	    android:layout_width="10dip" 
	    android:layout_height="10dip"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" 
		android:contentDescription="@string/empty"/>
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:layout_marginTop="2dip"
		android:layout_toLeftOf="@id/list_image_arrow"
		android:layout_marginLeft="5dip" 
		android:layout_marginRight="5dip"
		android:gravity="left|center_vertical"
		android:orientation="vertical">
				
	    	<LinearLayout 
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_marginTop="2dip"
			android:layout_toLeftOf="@id/list_image_arrow"
			android:layout_marginLeft="5dip"
			android:gravity="left|center_vertical"
			android:orientation="horizontal">
				<TextView android:textSize="12sp" 
				    android:singleLine="true"
					android:textStyle="bold" 
					android:text="title16"
					android:id="@+id/widget_blog_subtitle" 
					android:gravity="left|center_vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />							
				<LinearLayout 
				    android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginTop="0dip"
					android:layout_marginBottom="0dip"
					android:gravity="right|center_vertical"
					android:orientation="horizontal">
					
				    <!--  <TextView 
				        android:id="@+id/blog_status"
				       	android:textSize="12sp"
					   	android:text="分类:"
					   	android:layout_width="wrap_content"
					   	android:layout_height="wrap_content"/>
				    -->		
					<ImageView
					   	android:id="@+id/widget_blog_star"	
					   	android:src="@drawable/star"
						android:layout_marginRight="4sp"	
						android:layout_width="15dip"
		    			android:layout_height="15dip"/>
					<ImageView
					    android:src="@drawable/keepread"
					   	android:id="@+id/widget_blog_read"
					   	android:layout_width="15dip"
		    			android:layout_height="15dip"
					   	android:layout_marginRight="4sp"/>
					   						   
				   <TextView 
				       	android:textSize="12sp"					       	
					   	android:id="@+id/widget_blog_date"
					   	android:layout_width="wrap_content"
					   	android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
			
		<TextView android:textSize="20sp"
			android:text="title20" 
			android:id="@+id/widget_blog_title"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:maxLines="3" />
	</LinearLayout>
	
</FrameLayout>